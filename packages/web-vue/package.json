{
  "name": "yc-design-vue",
  "private": false,
  "version": "2.5.3",
  "type": "module",
  "description": "A Vue 3 component library.",
  "keywords": [
    "vue",
    "vue3",
    "ui",
    "components"
  ],
  "author": "2429162154@qq.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/boy-twilight-lee/yc-design"
  },
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "release": "vite build && npm publish",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx --fix",
    "format": "npx prettier --write --loglevel warn 'src/**/*.{js,ts,json,tsx,css,less,vue,html,md}'"
  },
  "main": "lib/index.js",
  "module": "es/index.js",
  "types": "es/index.d.ts",
  "files": [
    "es",
    "lib",
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./es/index.d.ts",
      "import": "./es/index.js",
      "require": "./lib/index.js"
    },
    "./resolver": {
      "types": "./es/resolver/index.d.ts",
      "import": "./es/resolver/index.js"
    },
    "./lang/*": {
      "types": "./es/lang-es/*.d.ts",
      "import": "./es/lang-es/*.js",
      "require": "./lib/lang-lib/*.js"
    },
    "./es/style.css": "./es/style.css",
    "./es/shared.css": "./es/shared.css",
    "./es/*": {
      "types": "./es/*/index.d.ts",
      "import": "./es/*/index.js"
    },
    "./es/*/index.css": "./es/*/index.css"
  },
  "dependencies": {
    "@tanstack/vue-virtual": "^3.13.12",
    "@vueuse/core": "^12.0.0",
    "b-tween": "^0.3.3",
    "dayjs": "^1.11.11",
    "nanoid": "^5.1.2",
    "tinycolor2": "^1.6.0"
  },
  "peerDependencies": {
    "vue": "^3.3.4"
  },
  "lint-staged": {
    "*.{vue,ts,tsx}": [
      "npm run format",
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
